---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <section class="hero">
    <img src="/images/0A20D71A-3FD8-4CFA-A157-FD86A5BED8E6.PNG" alt="Cowboy at dusk" class="hero-image" />
    <div class="hero-content">
      <h1>CULTURE.<br />STORIES.<br />PRIDE.</h1>
      <p class="subtitle">A space for queer cowboys and rural LGBTQ+ folks.</p>
    </div>
  </section>

  <section id="stories" class="featured">
    <h2>Featured Stories</h2>
    <div class="stories-grid">
      <article class="story-card">
        <h3>Welcome to gaycowboy.work</h3>
        <p>A personal space celebrating queer rural life.</p>
      </article>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(92, 75, 61, 0.5) 0%, rgba(63, 95, 127, 0.4) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: #f4ecd8;
    padding: 1.5rem;
    max-width: 90%;
  }

  .hero-content h1 {
    font-size: clamp(1.5rem, 8vw, 3.5rem);
    margin: 0 0 1rem 0;
    letter-spacing: 0.05em;
    line-height: 1.2;
  }

  .subtitle {
    font-size: clamp(1rem, 4vw, 1.5rem);
    opacity: 0.95;
    margin: 0;
    line-height: 1.5;
  }

  .featured {
    margin: 3rem 0;
    padding: 2rem 0;
    border-top: 1px solid rgba(92, 75, 61, 0.1);
  }

  .featured h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: clamp(1.5rem, 5vw, 2rem);
  }

  .stories-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 0 1rem;
  }

  .story-card {
    padding: 1.5rem;
    background: rgba(244, 236, 216, 0.5);
    border: 1px solid rgba(92, 75, 61, 0.1);
  }

  .story-card h3 {
    margin: 0 0 0.75rem 0;
    font-size: clamp(1.1rem, 3vw, 1.5rem);
  }

  .story-card p {
    margin: 0;
    font-size: 0.95rem;
  }

  /* Tablet and up */
  @media (min-width: 640px) {
    .hero {
      min-height: 70vh;
      margin-bottom: 3rem;
    }

    .featured {
      margin: 4rem 0;
      padding: 3rem 0;
    }

    .stories-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      padding: 0;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .hero {
      min-height: 80vh;
    }

    .featured {
      margin: 6rem 0;
      padding: 4rem 0;
    }

    .stories-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }
</style>

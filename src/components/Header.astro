---
// src/components/Header.astro
---

<header class="header">
  <nav class="nav-container">
    <a href="/" class="logo">gaycowboy.work</a>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="#stories">Stories</a></li>
      <li><a href="#about">About</a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    background: #f4ecd8;
    border-bottom: 1px solid rgba(92, 75, 61, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: #5c4b3d;
    text-decoration: none;
    letter-spacing: 0.02em;
  }

  .logo:hover {
    color: #3f5f7f;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #2a2419;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: #5c4b3d;
  }
</style>
